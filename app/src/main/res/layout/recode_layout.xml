<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        >

    <LinearLayout
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/recode_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手红包-完善资料"
            android:textSize="15px"
            android:textColor="#444444"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6px"
            >
            <TextView
                android:id="@+id/recode_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-11-16"
                android:textSize="13px"
                android:textColor="#999999"
                />
            <TextView
                android:id="@+id/recode_stute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已通过"
                android:textSize="13px"
                android:textColor="#999999"
                android:layout_marginLeft="20px"
                />
        </LinearLayout>

    </LinearLayout>

        <TextView
            android:id="@+id/pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textSize="15px"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64px"
            />
    <TextView
        android:id="@+id/recode_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.53元"
        android:textColor="#FB4F4F"
        android:textSize="15px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>
</LinearLayout>
