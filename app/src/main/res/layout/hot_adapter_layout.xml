<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg_itemshap">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:orientation="horizontal"
        android:layout_marginLeft="15px"
        android:layout_marginRight="14px"
        android:layout_marginTop="30px"
        >
        <ImageView
            android:id="@+id/hot_icon"
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@mipmap/ic_flowpig"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="52px"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
            <TextView
                android:id="@+id/hot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花无尽消费贷"
                android:textSize="14px"
                android:textColor="#444444"
                />
                <TextView
                    android:id="@+id/pri_title"
                    android:layout_width="wrap_content"
                    android:layout_height="13px"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:text="通过率高"
                    android:textColor="#FB4F4F"
                    android:textSize="9px"
                    android:layout_marginLeft="9px"
                    android:background="@drawable/hotback"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/hot_destory"
                android:layout_width="130px"
                android:layout_height="wrap_content"
                android:text="随时随地,想借就借"
                android:textSize="12px"
                android:textColor="#999999"
                android:layout_alignParentBottom="true"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/hot_goto"
            android:layout_width="72px"
            android:layout_height="26px"
            android:text="申请"
            android:textColor="#ffffff"
            android:textSize="14px"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/buttonshap"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D8D8D8"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="8px"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:orientation="horizontal"
            android:layout_marginLeft="15px"
            android:layout_marginTop="5px"
            android:layout_marginRight="10px"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="额度 (元)"
                    android:textSize="12px"
                    android:textColor="#666666"
                    />
                <TextView
                    android:id="@+id/hot_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14px"
                    android:textColor="#333333"
                    android:layout_marginTop="3px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期限"
                    android:textSize="12px"
                    android:textColor="#666666"
                    />
                <TextView
                    android:id="@+id/hot_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14px"
                    android:textColor="#333333"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12px"
                    android:textColor="#666666"
                    />
                <TextView
                    android:id="@+id/hot_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF7373"
                    android:textSize="12px"
                    />
            </LinearLayout>


        </RelativeLayout>

