<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/guoshen_hua"
    >


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="曹操贷"
        android:layout_marginTop="16px"
        android:layout_marginLeft="29px"
        android:textColor="#333333"
        android:textSize="17px"
        />


    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="18px"
        android:layout_height="18px"
        android:src="@drawable/guoshen_edit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22px"
        android:layout_marginRight="22px"
        />


    <TextView
        android:id="@+id/tv_bqyhtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本期应还:"
        android:layout_marginTop="21px"
        android:layout_marginLeft="29px"
        android:layout_below="@+id/tv_name"
        android:textSize="14px"
        android:textColor="#333333"
        />


    <TextView
        android:id="@+id/tv_bqyhnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="556.66"
        android:layout_alignBaseline="@+id/tv_bqyhtext"
        android:layout_toRightOf="@+id/tv_bqyhtext"
        android:layout_marginLeft="30px"
        android:textSize="14px"
        android:textColor="#333333"
        />


    <TextView
        android:id="@+id/tv_hkrqtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还款日期:"
        android:textSize="14px"
        android:textColor="#333333"
        android:layout_below="@+id/tv_bqyhtext"
        android:layout_marginTop="7px"
        android:layout_marginLeft="29px"
        />

    <TextView
        android:id="@+id/tv_hkrqnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-05-24"
        android:layout_alignBaseline="@+id/tv_hkrqtext"
        android:layout_toRightOf="@+id/tv_hkrqtext"
        android:layout_marginLeft="30px"
        android:textSize="14px"
        android:textColor="#333333"
        />


    <TextView
        android:id="@+id/tv_hkts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待还款"
        android:layout_alignBaseline="@+id/tv_hkrqnum"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32px"
        android:textSize="14px"
        android:textColor="#333333"
        />



    <TextView
        android:id="@+id/tv_syqstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hkrqtext"
        android:text="剩余期数:"
        android:textSize="14px"
        android:textColor="#333333"
        android:layout_marginTop="7px"
        android:layout_marginLeft="29px"
        />

    <TextView
        android:id="@+id/tv_syqsnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5期"
        android:layout_alignBaseline="@+id/tv_syqstext"
        android:layout_toRightOf="@+id/tv_syqstext"
        android:layout_marginLeft="30px"
        android:textSize="14px"
        android:textColor="#333333"
        />


</com.zhy.autolayout.AutoRelativeLayout>