<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detaillayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context="com.smileflowpig.money.moneyplatfrom.activities.DetailActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lin_button"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentBottom="true"
        android:background="#F4F4F4"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/collect_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/no_collect"
                android:layout_width="17px"
                android:layout_height="16px"
                android:src="@mipmap/noshoucang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="收藏"
                android:textColor="#333333"
                android:textSize="16px" />

        </LinearLayout>


        <TextView
            android:id="@+id/apply_success"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#FFCE25"
            android:gravity="center"
            android:text="立即申请"
            android:textColor="#ffffff"
            android:textSize="16px" />


    </com.zhy.autolayout.AutoLinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="#FFCE25"
        android:paddingTop="@dimen/statusBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:titleTextAppearance="@style/TextAppearance.Title">

        <ImageView
            android:id="@+id/detal_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/overback" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_16" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/len_10"
            android:src="@mipmap/zhuanfa"
            android:visibility="gone" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/lin_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#F4F4F4"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="355px"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="323px"
                    android:layout_height="191px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/getdetailover"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="81px">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="63px"
                            android:layout_marginLeft="15px"
                            android:layout_marginTop="13px"
                            android:layout_marginRight="18px"
                            android:orientation="horizontal">
                            <!--<ImageView-->
                            <!--android:id="@+id/ppicon"-->
                            <!--android:layout_width="45px"-->
                            <!--android:layout_height="46px"-->
                            <!--android:src="@drawable/default_portrait"-->
                            <!--/>-->
                            <ImageView
                                android:id="@+id/ppicon"
                                android:layout_width="63px"
                                android:layout_height="63px"
                                android:src="@drawable/default_portrait" />

                            <RelativeLayout
                                android:layout_width="180px"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="13px">

                                <TextView
                                    android:id="@+id/ppname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="#ffffff"
                                    android:textSize="18px" />

                                <TextView
                                    android:id="@+id/pptext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="#ffffff"
                                    android:textSize="12px" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="17px"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="通过率"
                                        android:textColor="#ffffff"
                                        android:textSize="12px" />

                                    <com.smileflowpig.money.moneyplatfrom.util.MarkView
                                        android:id="@+id/ppmark"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:contentSize="15dp"
                                        app:disabled="true"
                                        app:leftPadding="3dp">

                                    </com.smileflowpig.money.moneyplatfrom.util.MarkView>

                                </LinearLayout>
                            </RelativeLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/detail_quality"
                            android:layout_width="30px"
                            android:layout_height="38px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14px"
                            android:src="@mipmap/quality"
                            android:visibility="gone" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="15px">

                        <LinearLayout
                            android:layout_width="135px"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/ppmoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="14px" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="28px"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/summoney"
                                    android:layout_width="80px"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:imeOptions="actionDone"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:textColor="#ffffff"
                                    android:textCursorDrawable="@drawable/ic_cursor"
                                    android:textSize="20px"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/money_edit"
                                    android:layout_width="15px"
                                    android:layout_height="15px"
                                    android:layout_marginLeft="15px"
                                    android:src="@mipmap/compileicon" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/pptimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="14px" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="28px">

                                <LinearLayout
                                    android:id="@+id/ppdata"
                                    android:layout_width="wrap_content"
                                    android:layout_height="28px"
                                    android:layout_alignParentRight="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/pptime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:textColor="#ffffff"
                                        android:textSize="20px"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="15px"
                                        android:layout_height="15px"
                                        android:layout_marginLeft="15px"
                                        android:src="@mipmap/compileicon" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="6px"
                        android:layout_marginRight="15px">

                        <TextView
                            android:id="@+id/pp_timetype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="每月还款金额"
                            android:textColor="#ffffff"
                            android:textSize="13px" />

                        <TextView
                            android:id="@+id/pp_lilvtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="月费率"
                            android:textColor="#ffffff"
                            android:textSize="13px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="最快放款"
                            android:textColor="#ffffff"
                            android:textSize="13px" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="4px"
                        android:layout_marginRight="15px">

                        <TextView
                            android:id="@+id/successgive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="18px" />

                        <TextView
                            android:id="@+id/pp_lilv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="#ffffff"
                            android:textSize="18px" />

                        <TextView
                            android:id="@+id/pp_obser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#ffffff"
                            android:textSize="18px" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="323px"
                    android:layout_height="35px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px"
                        android:gravity="center"
                        android:text="*仅供参考,请以实际审批结果为准*"
                        android:textColor="#9D9D9D"
                        android:textSize="12px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#EDEDED" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="323px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平台资料"
                        android:textColor="#262626"
                        android:textSize="12px" />

                    <TextView
                        android:id="@+id/pp_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:textColor="#FC2E39"
                        android:textSize="12px" />

                </LinearLayout>

                <TextView
                    android:layout_width="323px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="申请条件"
                    android:textColor="#262626"
                    android:textSize="12px" />

                <TextView
                    android:id="@+id/pp_cond"
                    android:layout_width="323px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:textColor="#878787"
                    android:textSize="12px" />

                <TextView
                    android:layout_width="323px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="所需资料"
                    android:textColor="#262626"
                    android:textSize="12px" />

                <TextView
                    android:id="@+id/pp_datum"
                    android:layout_width="323px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:textColor="#878787"
                    android:textSize="12px" />

                <TextView
                    android:layout_width="323px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="审核说明"
                    android:textColor="#262626"
                    android:textSize="12px" />

                <TextView
                    android:id="@+id/pp_state"
                    android:layout_width="323px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:textColor="#262626"
                    android:textSize="12px" />

                <!--<TextView-->
                <!--android:id="@+id/pp_phone"-->
                <!--android:layout_width="323px"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="客服电话：40000999"-->
                <!--android:textSize="12px"-->
                <!--android:textColor="#262626"-->
                <!--android:layout_marginTop="20px"-->
                <!--/>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20px"

                    />

            </LinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>


</com.zhy.autolayout.AutoRelativeLayout>
