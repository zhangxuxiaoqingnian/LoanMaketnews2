<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/piglayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFCE25"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13px"
                    android:text="小花猪"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18px" />

                <ImageView
                    android:id="@+id/pigmess"
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/icon_message_mine_red" />
            </RelativeLayout>
        </LinearLayout>

        <com.smileflowpig.money.moneyplatfrom.util.MyScrollView
            android:id="@+id/home_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7F7F7"
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/shoulayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#ffffff" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13px"
                            android:text="小花猪"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="28px" />

                        <ImageView
                            android:id="@+id/pighomemess"
                            android:layout_width="24px"
                            android:layout_height="24px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20px"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/havemessage" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="123px"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/onedata"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/qucklist" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12px"
                            android:text="快借1500"
                            android:textColor="#333333"
                            android:textSize="12px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/twodata"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/qucknews" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12px"
                            android:text="最新口子"
                            android:textColor="#333333"
                            android:textSize="12px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/threedata"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/qucksuccess" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12px"
                            android:text="一定借到钱"
                            android:textColor="#333333"
                            android:textSize="12px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fourdata"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/quckcard" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12px"
                            android:text="信用卡"
                            android:textColor="#333333"
                            android:textSize="12px" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16px"
                    android:layout_marginLeft="45px"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/xiaohuazhu" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="10px"
                        android:layout_marginLeft="8px"
                        android:background="#FF5D49" />

                    <!--滚动文字-->

                    <com.smileflowpig.money.moneyplatfrom.LampView
                        android:id="@+id/piglampview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <com.smileflowpig.money.moneyplatfrom.util.CustomViewpagerView
                    android:id="@+id/pigvp"
                    android:layout_width="match_parent"
                    android:layout_height="174px"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="11px"
                    android:layout_marginRight="30px"
                    android:clipChildren="false" />

                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/pigbanner"
                    android:layout_width="355px"
                    android:layout_height="108px"
                    app:AutoPlayTime="3000"
                    app:isAutoPlay="true"
                    app:isHandLoop="true"
                    app:pointContainerPosition="BOTTOM"
                    app:pointsPosition="CENTER"></com.stx.xhb.xbanner.XBanner>

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_marginTop="12px"-->
                <!--android:layout_marginLeft="24px"-->
                <!--android:gravity="center_vertical"-->
                <!--&gt;-->
                <!--<ImageView-->
                <!--android:layout_width="20px"-->
                <!--android:layout_height="20px"-->
                <!--android:src="@mipmap/loginicon"-->
                <!--/>-->
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="特色功能"-->
                <!--android:textSize="18px"-->
                <!--android:textColor="#000000"-->
                <!--android:layout_marginLeft="10px"-->
                <!--android:textStyle="bold"-->
                <!--/>-->
                <!--</LinearLayout>-->
                <!--<android.support.v7.widget.RecyclerView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="100px"-->
                <!--android:layout_marginLeft="10px"-->
                <!--android:layout_marginTop="10px"-->
                <!--android:id="@+id/pig_feature"-->
                <!--android:overScrollMode="never"-->
                <!--android:scrollbars="none"-->
                <!--/>-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="12px"
                    android:layout_marginRight="18px">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/hot_platform" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="28px"
                        android:text="热门平台"
                        android:textColor="#000000"
                        android:textSize="18px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pig_alldata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:text="全部贷款>>"
                        android:textColor="#FF8D24"
                        android:textSize="12px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="355px"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/platform_rv"
                        android:layout_width="355px"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="12px"
                    android:layout_marginRight="18px">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/hot_message" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="28px"
                        android:text="热门资讯"
                        android:textColor="#000000"
                        android:textSize="18px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pig_allnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="全部资讯>>"
                        android:textColor="#FF8D24"
                        android:textSize="12px" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="355px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:background="#ffffff"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/message_rv"
                        android:layout_width="325px"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </LinearLayout>
        </com.smileflowpig.money.moneyplatfrom.util.MyScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/overimg"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50px"

        />
</RelativeLayout>
