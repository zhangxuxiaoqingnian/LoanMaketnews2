                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="100px"-->
                <!--android:layout_marginLeft="10px"-->
                <!--android:layout_marginTop="10px"-->
                <!--android:id="@+id/pig_feature"-->
                <!--android:overScrollMode="never"-->
                <!--android:scrollbars="none"-->
                <!--/>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginRight="18px"
                android:layout_marginTop="12px"
                >
                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:src="@mipmap/hot_platform"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门平台"
                    android:textColor="#000000"
                    android:textSize="18px"
                    android:layout_marginLeft="28px"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/pig_alldata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:text="全部贷款>>"
                    android:textColor="#FF8D24"
                    android:textSize="12px" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="355px"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:id="@+id/platform_rv"
                android:nestedScrollingEnabled="false"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginRight="18px"
                android:layout_marginTop="12px"
                >
                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:src="@mipmap/hot_message"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门资讯"
                    android:textColor="#000000"
                    android:textSize="18px"
                    android:layout_marginLeft="28px"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/pig_allnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部资讯>>"
                    android:textSize="12px"
                    android:textColor="#FF8D24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="355px"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10px"
                android:gravity="center_horizontal"
                android:background="#ffffff"
                >
            <android.support.v7.widget.RecyclerView
                android:layout_width="325px"
                android:layout_height="wrap_content"
                android:id="@+id/message_rv"
                android:nestedScrollingEnabled="false"
                />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/overimg"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50px"
        />
</RelativeLayout>
