<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:id="@+id/piglayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="#FFCE25"
        android:visibility="gone"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小花猪"
            android:textSize="24px"
            android:textColor="#ffffff"
            android:layout_marginLeft="13px"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/pigmess"
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/icon_message_mine_red"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_scroll"
        android:overScrollMode= "never"
        android:fadingEdge="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F7F7F7"
            android:gravity="center_horizontal"
            android:clipChildren="false"
            >
            <LinearLayout
                android:id="@+id/shoulayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#ffffff"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#ffffff"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小花猪"
                    android:textSize="24px"
                    android:textColor="#000000"
                    android:layout_marginLeft="13px"
                    />
                <ImageView
                    android:id="@+id/pighomemess"
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:src="@mipmap/havemessage"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    />
            </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="9px"
                android:background="#ffffff"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="123px"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#ffffff"
                >
                <LinearLayout
                    android:id="@+id/onedata"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:src="@mipmap/qucklist"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快借1500"
                        android:textColor="#333333"
                        android:textSize="12px"
                        android:layout_marginTop="12px"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/twodata"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:src="@mipmap/qucknews"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最新口子"
                        android:textColor="#333333"
                        android:textSize="12px"
                        android:layout_marginTop="12px"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/threedata"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:src="@mipmap/qucksuccess"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一定借到钱"
                        android:textColor="#333333"
                        android:textSize="12px"
                        android:layout_marginTop="12px"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fourdata"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:src="@mipmap/quckcard"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信用卡"
                        android:textColor="#333333"
                        android:textSize="12px"
                        android:layout_marginTop="12px"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="16px"
                android:orientation="horizontal"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:layout_marginLeft="45px"
                >
                <ImageView
                    android:layout_width="27px"
                    android:layout_height="16px"
                    android:src="@mipmap/xiaohuazhu"
                    />
                <View
                    android:layout_width="1px"
                    android:layout_height="10px"
                    android:background="#FF5D49"
                    android:layout_marginLeft="8px"
                    />

                <!--滚动文字-->

                <com.smileflowpig.money.moneyplatfrom.LampView
                    android:layout_width="wrap_content"
                    android:id="@+id/piglampview"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <com.smileflowpig.money.moneyplatfrom.util.CustomViewpagerView
                android:layout_width="match_parent"
                android:layout_height="174px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="11px"
                android:id="@+id/pigvp"
                android:clipChildren="false"
                />
            <com.stx.xhb.xbanner.XBanner
                android:layout_width="355px"
                android:layout_height="108px"
                app:AutoPlayTime="3000"
                app:isAutoPlay="true"
                app:pointsPosition="CENTER"
                app:pointContainerPosition="BOTTOM"
                app:isHandLoop="true"
                android:id="@+id/pigbanner"
                >
            </com.stx.xhb.xbanner.XBanner>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_marginTop="12px"-->
