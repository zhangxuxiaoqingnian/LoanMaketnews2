                    <!--android:text="特色功能"-->
                    <!--android:textSize="18px"-->
                    <!--android:textColor="#000000"-->
                    <!--android:layout_marginLeft="10px"-->
                    <!--android:textStyle="bold"-->
                    <!--/>-->
