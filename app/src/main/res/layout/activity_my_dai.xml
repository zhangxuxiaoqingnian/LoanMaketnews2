<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FEA034"
    tools:context="money.kuxuan.platform.moneyplatfrom.activities.MyDaiActivity">

    <com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:paddingTop="30px"
        >

        <ImageView
            android:id="@+id/dai_back"
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@drawable/guoshen_back"
            android:layout_marginLeft="15px"
            />
        <TextView
            android:id="@+id/dai_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小额贷款"
            android:layout_centerHorizontal="true"
            android:textSize="17px"
            android:textColor="#ffffff"
            />

    </com.zhy.autolayout.AutoRelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dairv"
            android:layout_width="355px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10px"
            />
    </RelativeLayout>


</LinearLayout>
