<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusBarSize"
        android:background="#FFCE25" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFCE25">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/overback" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="完成新手任务赚现金红包"
            android:textSize="18px" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:background="@drawable/bg_taskhongbao_bg"
        android:orientation="horizontal"
        android:paddingTop="16px"
        android:paddingBottom="16px">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="62">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_task_left1" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/icon_task_left2" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="231"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">


                <com.smileflowpig.money.moneyplatfrom.weight.MyTextView
                    android:id="@+id/activity_task_complete_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:textSize="30px" />

                <com.smileflowpig.money.moneyplatfrom.weight.MyTextView
                    android:id="@+id/activity_task_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新手任务"
                    android:textSize="30px" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">


                <com.smileflowpig.money.moneyplatfrom.weight.MyTextView
                    android:id="@+id/activity_task_zhuan_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赚"
                    android:textSize="30px" />

                <com.smileflowpig.money.moneyplatfrom.weight.MyMoneyTextView
                    android:id="@+id/activity_task_money_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28.88"
                    android:textColor="#FFE643"
                    android:textSize="36px" />

                <com.smileflowpig.money.moneyplatfrom.weight.MyTextView
                    android:id="@+id/activity_task_xianjinhongbao_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现金红包"
                    android:textSize="30px" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="24px"
                android:layout_marginTop="7px"
                android:background="@drawable/bg_task_jiuhong"
                android:gravity="center"
                android:text="距离新手福利结束还有"
                android:textColor="@color/white"
                android:textSize="14px" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginTop="13px"
                android:background="@drawable/bg_task_daojishi">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/activity_task_day_textView"
                        android:layout_width="24px"
                        android:layout_height="30px"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_task_jiuhong"
                        android:gravity="center"
                        android:text="19"
                        android:textColor="@color/white"
                        android:textSize="14px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5px"
                        android:text="天"
                        android:textColor="@color/white"
                        android:textSize="14px" />

                    <TextView
                        android:id="@+id/activity_task_shi_textView"
                        android:layout_width="24px"
                        android:layout_height="30px"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_task_jiuhong"
                        android:gravity="center"
                        android:text="19"
                        android:textColor="@color/white"
                        android:textSize="14px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5px"
                        android:text="时"
                        android:textColor="@color/white"
                        android:textSize="14px" />

                    <TextView
                        android:id="@+id/activity_task_fen_textView"
                        android:layout_width="24px"
                        android:layout_height="30px"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_task_jiuhong"
                        android:gravity="center"
                        android:text="19"
                        android:textColor="@color/white"
                        android:textSize="14px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5px"
                        android:text="分"
                        android:textColor="@color/white"
                        android:textSize="14px" />

                    <TextView
                        android:id="@+id/activity_task_miao_textView"
                        android:layout_width="24px"
                        android:layout_height="30px"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_task_jiuhong"
                        android:gravity="center"
                        android:text="19"
                        android:textColor="@color/white"
                        android:textSize="14px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5px"
                        android:text="秒"
                        android:textColor="@color/white"
                        android:textSize="14px" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="62">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_task_right" />

        </RelativeLayout>


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_task_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</com.zhy.autolayout.AutoLinearLayout>