<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88px"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#ffffff"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="57px"
        android:layout_marginTop="20px"
        >
        <TextView
            android:id="@+id/mess_name"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:text="了盛开的九分裤看的反馈"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textSize="14px"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/mess_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="置顶"
                android:textSize="12px"
                android:textColor="#F64D4D"
                android:visibility="gone"
                android:layout_marginRight="10px"
                />
            <TextView
                android:id="@+id/mess_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018/11/01"
                android:textSize="12px"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/mess_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25541阅读"
                android:textSize="12px"
                android:textColor="#999999"
                android:layout_marginLeft="10px"
                />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/mess_icon"
        android:layout_width="135px"
        android:layout_height="57px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20px"
        android:scaleType="fitXY"
        />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#ffffff"
        />
</LinearLayout>
