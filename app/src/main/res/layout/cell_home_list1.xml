<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_76"
    android:id="@+id/mlayout"
    android:foreground="@drawable/ic_touch_fg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/len_16"
    >

    <com.smileflowpig.money.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="@dimen/len_16"
        android:scaleType="fitXY"
        android:src="@drawable/default_portrait" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/len_10"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/len_24"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/len_8"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/fontNameSize"
                />

            <TextView
                android:id="@+id/txt_prod_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_background_red"
                android:ellipsize="end"

                android:lines="1"
                android:padding="@dimen/len_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textSize="@dimen/smallTextSize"/>
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/textThird"
            android:textSize="@dimen/font_12"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@string/application_people"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textThird"
                android:textSize="@dimen/font_12"/>

            <TextView
                android:id="@+id/txt_people_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/len_2"
                android:gravity="center_vertical"
                android:lines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/red_text"
                android:textSize="@dimen/font_12"/>


            <TextView
                android:id="@+id/txt_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/len_16"
                android:ellipsize="end"

                android:gravity="center_vertical"
                android:lines="1"
                android:maxLength="50"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textThird"
                android:textSize="@dimen/font_12"
                />

            <TextView
                android:id="@+id/txt_rate_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/len_2"
                android:gravity="center_vertical"
                android:lines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/red_text"
                android:textSize="@dimen/font_12"/>

            <TextView

                android:id="@+id/textqi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/len_2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="èµ·"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textThird"

                android:textSize="@dimen/font_12"/>
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name"
        android:background="@drawable/forward"

        />
</com.zhy.autolayout.AutoLinearLayout>