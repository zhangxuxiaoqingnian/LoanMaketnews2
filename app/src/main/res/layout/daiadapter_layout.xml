<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="355px"
    android:layout_height="132px"
    android:orientation="horizontal"
    android:background="#ffffff"
    >
    <LinearLayout
        android:id="@+id/adcb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginLeft="15px"
        >
        <CheckBox
            android:id="@+id/adaptercb"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:clickable="false"
            android:button="@drawable/deletecheck"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:orientation="horizontal"
        android:layout_marginTop="10px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="23px"
        >
        <ImageView
            android:id="@+id/dai_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/loginicon"
            />
        <RelativeLayout
            android:layout_width="160px"
            android:layout_height="match_parent"
            android:layout_marginLeft="12px"
            >
            <TextView
                android:id="@+id/dai_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒贝"
                android:textColor="#333333"
                android:textSize="16px"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/dai_shao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3分钟审批 30秒下款"
                android:textSize="13px"
                android:textColor="#666666"
                android:layout_alignParentBottom="true"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            >
            <TextView
                android:id="@+id/dai_shen"
                android:layout_width="75px"
                android:layout_height="24px"
                android:text="立即申请"
                android:textColor="#ffffff"
                android:textSize="14px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/obsechshap"
                android:gravity="center"
                android:singleLine="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EDEDED"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="14px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62px"
        android:layout_marginLeft="15px"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="额度"
                android:textSize="12px"
                android:textColor="#555555"
                />
            <TextView
                android:id="@+id/dai_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000-10000元"
                android:textSize="13px"
                android:textColor="#FF4848"
                android:layout_marginTop="6px"
                />
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="50px"
            android:background="#F2F2F2"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="利率"
                android:textSize="12px"
                android:textColor="#555555"
                />
            <TextView
                android:id="@+id/dai_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.01%"
                android:textSize="13px"
                android:textColor="#FF4848"
                android:layout_marginTop="6px"
                />
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="50px"
            android:background="#F2F2F2"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成功借款"
                android:textSize="12px"
                android:textColor="#555555"
                />
            <TextView
                android:id="@+id/dai_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="542121人"
                android:textSize="13px"
                android:textColor="#FF4848"
                android:layout_marginTop="6px"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
