<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:layout_marginTop="5px"
    android:layout_marginBottom="5px"
    android:id="@+id/item_task_hongbao_layout"
    android:background="@mipmap/icon_task_big_bg"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15px"
        >


        <LinearLayout
            android:id="@+id/item_task_hongbao_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/item_task_hongbao_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_task_current" />


            <TextView
                android:id="@+id/item_task_hongbao_titlename_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="当前任务"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="18px" />
        </LinearLayout>


        <View
            android:id="@+id/item_task_hongbao_title_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10px"
            android:background="#EDEDED" />








        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="92px"
           >


            <ImageView
                android:id="@+id/item_task_hongbao_img"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_task_jiangli" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_task_hongbao_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_task_hongbao_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完善个人信息"
                    android:textColor="#666666"
                    android:textSize="14px" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="奖励"
                        android:textColor="#666666"
                        android:textSize="14px" />

                    <TextView
                        android:id="@+id/item_task_hongbao_money_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.88元"
                        android:textColor="#FF6700"
                        android:textSize="14px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="红包"
                        android:textColor="#666666"
                        android:textSize="14px" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/item_task_hongbao_setting_text"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bill_setting_bg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="去完成"
                android:textColor="@color/white"
                android:textSize="12px" />


        </RelativeLayout>
        </LinearLayout>


    <ImageView
        android:id="@+id/item_task_hongbao_loadding_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_task_loadding"
        android:layout_gravity="right"/>


</FrameLayout>