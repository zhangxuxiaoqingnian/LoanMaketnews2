<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    tools:context="com.smileflowpig.money.moneyplatfrom.activities.IdentityCardActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:paddingTop="@dimen/statusBarSize"
        android:background="#FFCE25"
        app:titleTextAppearance="@style/TextAppearance.Title">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/overback" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="身份信息"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_16"
            />


    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="355px"
        android:layout_height="25px"
        android:orientation="horizontal"
        android:background="#FDF9E5"
        android:layout_marginTop="12px"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="15px"
            android:layout_height="15px"
            android:src="@mipmap/remindcont"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入您本人的身份证信息,提交后将不能更改"
            android:textSize="12px"
            android:textColor="#555555"
            android:layout_marginLeft="10px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="355px"
        android:layout_height="22px"
        android:orientation="horizontal"
        android:layout_marginTop="19px"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="21px"
            android:layout_height="16px"
            android:src="@mipmap/identitycard"
            android:layout_marginLeft="5px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份信息"
            android:textColor="#222222"
            android:textSize="16px"
            android:layout_marginLeft="14px"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="355px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@mipmap/bg_itemshap"
        android:layout_marginTop="14px"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="15px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="真实姓名  "
                android:textColor="#444444"
                android:gravity="center"
                android:textSize="15px"
                android:layout_marginTop="10px"
                />
            <EditText
            android:id="@+id/name_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15px"
            android:textColor="#444444"
            android:textColorHint="#cccccc"
            android:hint="请输入身份证姓名"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:background="@null"
            android:layout_marginTop="10px"
            android:singleLine="true"
            android:imeOptions="actionNext"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16px"
            android:layout_marginRight="15px"
            android:background="#E9E9E9"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="15px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="身份证号  "
                android:textColor="#444444"
                android:gravity="center"
                android:textSize="15px"
                android:layout_marginBottom="10px"
                />
            <EditText
                android:id="@+id/cord_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15px"
                android:textColor="#444444"
                android:textColorHint="#cccccc"
                android:hint="请输入身份证号码"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:background="@null"
                android:layout_marginBottom="10px"
                android:inputType="number"
                android:maxLength="18"
                />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/overget"
        android:layout_width="249px"
        android:layout_height="40px"
        android:text="确认"
        android:textSize="17px"
        android:textColor="#ffffff"
        android:background="@drawable/buttonnoshap"
        android:layout_marginTop="131px"
        android:gravity="center"
        />

</LinearLayout>
