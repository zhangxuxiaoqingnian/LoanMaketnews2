<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="money.kuxuan.platform.moneyplatfrom.activities.AdActivity">



    <ImageView
        android:id="@+id/ad_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/len_80"
        android:scaleType="fitXY" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/len_16"
        android:layout_marginTop="@dimen/len_40"
        android:background="@drawable/text_background"
        android:paddingBottom="@dimen/len_4"
        android:paddingLeft="@dimen/len_8"
        android:paddingRight="@dimen/len_8"
        android:id="@+id/tv_launcher_timer"
        android:paddingTop="@dimen/len_4"
        android:text="倒计时 3S"
        android:textColor="@color/white"
        android:textSize="@dimen/font_12" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_84"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <money.kuxuan.platform.common.widget.PortraitView
            android:layout_width="@dimen/len_48"
            android:layout_height="@dimen/len_48"
            android:layout_marginTop="@dimen/len_10"
            android:src="@mipmap/ic_pig" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/app_name"
            android:textColor="@color/textSecond" />

    </LinearLayout>
</RelativeLayout>
