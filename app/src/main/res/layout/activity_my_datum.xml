<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    tools:context="com.smileflowpig.money.moneyplatfrom.activities.MyDatumActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:paddingTop="@dimen/statusBarSize"
        android:background="#FFCE25"
        app:titleTextAppearance="@style/TextAppearance.Title">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/overback" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="我的资料"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_16"
            />


    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的资料"
        android:textColor="#FF5F00"
        android:textSize="16px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="18px"
        />
    <LinearLayout
        android:layout_width="355px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@mipmap/bg_itemshap"
        android:layout_marginTop="14px"
        >

        <RelativeLayout
            android:id="@+id/authentication"
            android:layout_width="match_parent"
            android:layout_height="66px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="15px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="身份认证"
                android:textColor="#444444"
                android:gravity="center"
                android:textSize="15px"
                android:layout_marginTop="10px"
                />
            <TextView
                android:id="@+id/identycard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15px"
                android:text="去认证"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:layout_marginTop="10px"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:layout_width="15px"
                    android:layout_height="15px"
                    android:src="@drawable/active_point"
                    android:layout_marginTop="10px"
                    />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="15px"
            android:background="#E9E9E9"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="15px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手机号"
                android:textColor="#444444"
                android:gravity="center"
                android:textSize="15px"
                />
            <TextView
                android:id="@+id/cardphone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15px"
                android:text="17610967228"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"

                />
            <ImageView
                android:layout_width="15px"
                android:layout_height="15px"
                android:src="@drawable/active_point"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="15px"
            android:background="#E9E9E9"
            />
        <RelativeLayout
            android:id="@+id/Alipay"
            android:layout_width="match_parent"
            android:layout_height="66px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="15px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支付宝绑定"
                android:textColor="#444444"
                android:gravity="center"
                android:textSize="15px"
                android:layout_marginBottom="10px"
                />
            <TextView
                android:id="@+id/gotopay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15px"
                android:text="去添加"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:layout_marginBottom="10px"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:layout_width="15px"
                    android:layout_height="15px"
                    android:src="@drawable/active_point"
                    android:layout_marginBottom="10px"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
