<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/layout"
    tools:context="money.kuxuan.platform.moneyplatfrom.activities.GuoShenDetail">

    <include layout="@layout/guoshen_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFAA48"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本期应还"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/guoprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="198.2元"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款日期"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/guodata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="198.2元"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余期数"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/guoqishu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="198.2元"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/guostute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还款"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />

    </RelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rel_tab"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        android:layout_marginTop="10px"
        android:layout_below="@+id/viewpager"

        >

        <TextView
            android:id="@+id/tv_hksj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16px"
            android:text="还款时间"
            android:textColor="#333333"
            android:layout_marginLeft="21px"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_qs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16px"
            android:text="期数"
            android:textColor="#333333"
            android:layout_toRightOf="@+id/tv_hksj"
            android:layout_marginLeft="26px"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_hkje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16px"
            android:text="还款金额"
            android:textColor="#333333"
            android:layout_toRightOf="@+id/tv_qs"
            android:layout_marginLeft="27px"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_dqzt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16px"
            android:text="当前状态"
            android:textColor="#333333"
            android:layout_toRightOf="@+id/tv_hkje"
            android:layout_marginLeft="27px"
            android:layout_centerVertical="true"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#EEEEEE"
            android:layout_alignParentBottom="true"
            />

    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guorv"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_updatestatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="16px"
        android:text="修改当前状态"
        android:textColor="#ffffff"
        android:background="#FFAA48"
        android:gravity="center"
        android:padding="15px"
        />

</LinearLayout>
