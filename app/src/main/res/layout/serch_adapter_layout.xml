<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg_itemshap">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:layout_marginLeft="15px"
        android:layout_marginRight="14px"
        >
        <ImageView
            android:id="@+id/hot_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_flowpig"
            android:layout_marginTop="30px"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/hot_icon"
            android:layout_marginLeft="10px"
            android:layout_marginTop="30px"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
            <TextView
                android:id="@+id/hot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花无尽消费贷"
                android:textSize="14px"
                android:textColor="#444444"
                />
                <TextView
                    android:id="@+id/pri_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通过率高"
                    android:textColor="#FB4F4F"
                    android:textSize="9px"
                    android:layout_marginLeft="9px"
                    android:background="@drawable/hotback"
                    android:gravity="center"
                    android:paddingLeft="5px"
                    android:paddingRight="5px"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/hot_destory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="随时随地,想借就借"
                android:textSize="12px"
                android:textColor="#999999"
                android:layout_alignParentBottom="true"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/hot_goto"
            android:layout_width="30px"
            android:layout_height="38px"
            android:src="@mipmap/quality"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginTop="5px"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D8D8D8"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="8px"
        />

