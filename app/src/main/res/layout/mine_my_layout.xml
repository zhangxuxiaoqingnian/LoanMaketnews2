<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="355px"
        android:layout_height="127px"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/actionBarWithStatusBarSize"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="22px"
            >
            <TextView
                android:id="@+id/mylogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="36px"
                android:textColor="#626262"
                />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myicon"
            android:layout_width="68px"
            android:src="@mipmap/loginicon"
            app:civ_border_width="6dp"
            app:civ_border_color="#ffffff"
            android:layout_height="68px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="355px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="6px"
        >
        <RelativeLayout
            android:id="@+id/isguan"
            android:layout_width="match_parent"
            android:layout_height="63px"
            android:layout_marginLeft="26px"
            android:layout_marginRight="39px"
            >
            <ImageView
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_centerVertical="true"
                android:src="@mipmap/guanyu"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textSize="15px"
                android:textColor="#444444"
                android:layout_marginLeft="35px"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="15px"
                android:layout_height="15px"
                android:src="@mipmap/gotoset"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e9e9e9"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            />
        <RelativeLayout
            android:id="@+id/isfan"
            android:layout_width="match_parent"
            android:layout_height="63px"
            android:layout_marginLeft="26px"
            android:layout_marginRight="39px"
            >
            <ImageView
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_centerVertical="true"
                android:src="@mipmap/fankui"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textSize="15px"
                android:textColor="#444444"
                android:layout_marginLeft="35px"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="15px"
                android:layout_height="15px"
                android:src="@mipmap/gotoset"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
