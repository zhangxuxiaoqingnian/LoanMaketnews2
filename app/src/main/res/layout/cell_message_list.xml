<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/len_36">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/font_12"
      android:id="@+id/time"
      android:layout_marginStart="@dimen/len_16"
      android:textColor="@color/textThird"
      android:text="2017年2月22日"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_mes_lin"
        android:layout_marginStart="@dimen/len_16"
        android:layout_marginEnd="@dimen/len_16"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:id="@+id/title_tv"
            android:layout_marginTop="@dimen/len_8"
            android:layout_marginBottom="@dimen/len_8"
            android:layout_marginStart="@dimen/len_8"
            android:textSize="@dimen/font_16"
            android:text="新平台上线！立即申请，拿红包！"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/len_8"
            android:layout_marginStart="@dimen/len_8"
            android:layout_marginEnd="@dimen/len_8"
            android:layout_height="@dimen/len_80"
            android:layout_marginBottom="@dimen/len_8"
            android:id="@+id/mes_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_tv"
            android:textSize="@dimen/font_14"
            android:layout_marginStart="@dimen/len_8"
            android:layout_marginEnd="@dimen/len_8"
            android:textColor="@color/textSecond"
            android:layout_marginBottom="@dimen/len_8"
            android:text="新平台上线！立即申请，拿红包！"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/len_8"
            android:layout_marginEnd="@dimen/len_8"
            android:background="@color/divider_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/len_36">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_14"
                android:textColor="@color/textSecond"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_8"
                android:text="查看详情"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_16"
                android:src="@drawable/active_point"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>