<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/actionBarWithStatusBarSize"
    android:background="@color/bg_color"
    tools:context="com.smileflowpig.money.moneyplatfrom.frags.main.MineFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_172"
        android:id="@+id/top_rel"
        android:background="@color/white"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"
            android:src="@drawable/mine_backgroun8"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/len_64"
            android:src="@mipmap/ic_pig"
            android:id="@+id/icon"
            app:civ_border_width="6dp"
            app:civ_border_color="#FFFFFF"
            android:layout_height="@dimen/len_64"
            android:layout_marginTop="@dimen/len_40"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:text="@string/login_regist"
            android:padding="0dp"
            android:textColor="@color/textPrimary"
            android:id="@+id/phone"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>

    <LinearLayout
        android:id="@+id/mycollect"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="@dimen/len_56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:textSize="@dimen/font_16"
            android:drawableStart="@drawable/footprint"
            android:drawablePadding="@dimen/len_16"
            android:text="我的收藏"
            android:textColor="@color/textPrimary"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>
    <LinearLayout
        android:id="@+id/newrecord"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="@dimen/len_56">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:textSize="@dimen/font_16"
            android:drawableStart="@drawable/footprint"
            android:drawablePadding="@dimen/len_16"
            android:text="浏览记录"
            android:textColor="@color/textPrimary"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>

    <LinearLayout
        android:id="@+id/memo"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="@dimen/len_56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:textSize="@dimen/font_16"
            android:drawableStart="@drawable/footprint"
            android:drawablePadding="@dimen/len_16"
            android:text="还款备忘录"
            android:textColor="@color/textPrimary"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/lin_problem"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="@dimen/len_56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:textSize="@dimen/font_16"
            android:drawableStart="@drawable/commonproblem"
            android:drawablePadding="@dimen/len_16"
            android:text="常见问题"
            android:textColor="@color/textPrimary"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="@dimen/len_56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:textSize="@dimen/font_16"
            android:drawableStart="@drawable/commonproblem"
            android:drawablePadding="@dimen/len_16"
            android:text="意见反馈"
            android:textColor="@color/textPrimary"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/apply_lin"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="@dimen/len_56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:textSize="@dimen/font_16"
            android:drawableStart="@drawable/applymine"
            android:drawablePadding="@dimen/len_16"
            android:text="我的申请"
            android:textColor="@color/textPrimary"/>

    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/len_10"
        android:id="@+id/set_layout"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="@dimen/len_56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:textSize="@dimen/font_16"
            android:drawableStart="@drawable/setting3"
            android:drawablePadding="@dimen/len_16"
            android:text="@string/setting_mine"
            android:textColor="@color/textPrimary"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>
</LinearLayout>
