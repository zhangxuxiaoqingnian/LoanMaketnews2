<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10px">


    <TextView
        android:id="@+id/item_bill_detial_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:textSize="14px"
        />
    <TextView
        android:id="@+id/item_bill_detial_money_text"
        android:layout_toRightOf="@+id/item_bill_detial_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="14px"
        />


    <TextView
        android:id="@+id/item_bill_detial_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_centerVertical="true"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="#FF3A3A"
        android:layout_alignParentRight="true"
        android:textSize="14px"/>
</RelativeLayout>