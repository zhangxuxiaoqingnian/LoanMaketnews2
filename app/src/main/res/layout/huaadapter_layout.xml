<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115px"
    android:layout_height="134px"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/huaicon"
            android:layout_width="45px"
            android:layout_height="45px"
            android:src="@mipmap/loginicon"
            android:layout_marginTop="13px"
            />
        <TextView
            android:id="@+id/huaname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小猪快借"
            android:textSize="14px"
            android:textColor="#422E2E"
            android:layout_marginTop="5px"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8px"
        android:layout_marginTop="2px"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="额度:"
            android:textColor="#422E2E"
            android:textSize="11px"
            />
        <TextView
            android:id="@+id/huatext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000-60000"
            android:textColor="#422E2E"
            android:textSize="11px"
            android:layout_marginLeft="5px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8px"
        android:layout_marginTop="5px"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="利率:"
            android:textColor="#422E2E"
            android:textSize="11px"
            />
        <TextView
            android:id="@+id/huatext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.83%起"
            android:textColor="#FC1D2E"
            android:textSize="11px"
            android:layout_marginLeft="5px"
            />

    </LinearLayout>

    <View
       android:layout_width="match_parent"
       android:layout_height="13px"
        android:background="#ffffff"
        />

</LinearLayout>
