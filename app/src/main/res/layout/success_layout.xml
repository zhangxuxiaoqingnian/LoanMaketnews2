<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300px"
    android:layout_height="202px"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/success_quan"

    >

    <ImageView
        android:layout_width="162px"
        android:layout_height="121px"
        android:src="@mipmap/success_img"
        android:layout_marginTop="29px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30px"
        >
        <TextView
            android:id="@+id/cancleno"
            android:layout_width="90px"
            android:layout_height="24px"
            android:text="否,我点错了"
            android:textColor="#4733EF"
            android:textSize="12px"
            android:gravity="center"
            android:background="@drawable/quan"
            />
        <TextView
            android:id="@+id/cancleyes"
            android:layout_width="81px"
            android:layout_height="24px"
            android:text="确认"
            android:textSize="12px"
            android:textColor="#ffffff"
            android:layout_marginLeft="16px"
            android:background="@drawable/over_get2"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>
