<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/len_128"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/error_image"
       />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txt_go"
        android:layout_height="wrap_content"
        android:text="界面走丢了"
        android:visibility="gone"
        android:textSize="@dimen/font_16"
        android:textColor="@color/textSecond"
        />

    <net.qiujuer.genius.ui.widget.Loading
        android:id="@+id/loading"
        android:layout_width="@dimen/len_32"
        android:layout_height="@dimen/len_32"
        android:layout_gravity="center"
        android:visibility="gone"
        app:gAutoRun="false"
        app:gBackgroundColor="@null"
        app:gForegroundColor="@color/yellow"
        app:gForegroundLineSize="@dimen/len_2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txt_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/len_16"
        android:layout_marginTop="@dimen/len_16"
        android:layout_gravity="center"
        android:text="@string/prompt_empty"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textThird" />


    <Button
        android:layout_width="wrap_content"

        android:layout_height="@dimen/len_32"
        android:text="重新加载"
        android:visibility="gone"
        android:id="@+id/bu_re"
        android:textColor="@color/white"
        android:background="@drawable/bu_yellow_bg"/>
</LinearLayout>